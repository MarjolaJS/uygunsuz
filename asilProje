import 'package:flutter/material.dart';
import 'package:sartbloglari/models/ogrenci.dart';

void main() {
  runApp(MaterialApp(home: MyWid()));
}

class MyWid extends StatelessWidget {
  String mesaj = "HELLO MY FİRST SCAPEGOATS ";
  List<Student> students = [new Student("Emine", "  Özcan", 100), Student("Mustafa", "  Hazır", 45), Student("Bedirhan", "  Yolcu", 20)];



  var liste = ["Kemal L.", "Özgür G.", "Bedirhan Y.", "Dogan K."];
  @override
  Widget build(BuildContext context) {

    return Scaffold(
      appBar: AppBar(
        title: Text(mesaj),
      ),
      body: buildBody(context)

    );
  }

  String sinavHesapla(int puan) {
    String mesaj = "";

    if (puan >= 50) {
      mesaj = "GEÇTİ";
    } else if (puan >= 35) {
      mesaj = "ŞARTLI GEÇTİ";
    } else {
      mesaj = "BÜTÜNLEMEYE GEL YEĞEN";
    }
    return mesaj;
  }

  void mesajGoster(BuildContext context,String mesaj) {
    var alert = AlertDialog(
      title: Text("PUANINIZ"),
      content: Text(mesaj),
    );

    showDialog(context: context, builder: (BuildContext context) => alert);
  }

  Widget buildBody(BuildContext context) {
    return Column(
      children: <Widget>[
        Expanded(
            child: ListView.builder(
                itemCount: students.length,
                itemBuilder: (BuildContext context, int index) {
                  return ListTile(
                    leading: CircleAvatar(
                      backgroundImage: NetworkImage("https://pixabay.com/get/g54badcb1a01dd55d84a9af7088592d435e74b82e23b5f21b0422d297c780edf26d02b54aed7aefa0c05262862ee28bc6_1920.jpg"),
                    ),
                    title: Text(students[index].firstName +""+ students[index].lastName),
                    subtitle: Text("Sınavdan aldığı not : " + students[index].grade.toString()+ "[" + students[index].getStatus+"]"),
                    trailing:buildStatusIcon(students[index].grade),
                    onLongPress: (){
                      print(students[index].firstName +""+ students[index].lastName);
                    },

                  );
                })),
        Center(
            child: RaisedButton(
              child: Text("Sınav Puanını Gör"),
              onPressed: () {
                var mesaj = sinavHesapla(33);
                mesajGoster(context,mesaj);
              },
            )),
      ],
    );

  }

  Widget buildStatusIcon(int grade) {
    if (grade>=50){
      return Icon(Icons.download_done_outlined);
    } else if (grade>=40){
      return Icon(Icons.adjust_outlined);
    } else{
      return Icon(Icons.clear);
    }


  }
}
